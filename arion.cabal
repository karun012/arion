category:            Testing
build-type:          Simple
cabal-version:       >=1.10

executable arion
  main-is:             Main.hs
  build-depends:       base >=4.6 && <4.7
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -threaded

test-suite test
  default-language:    Haskell2010
  HS-Source-Dirs:      test, src
  build-depends:       base >=4.6 && <4.7,
                       hspec
  type:                exitcode-stdio-1.0
  ghc-options:         -threaded
  main-is:             Spec.hs
